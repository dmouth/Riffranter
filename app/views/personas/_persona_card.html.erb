<div class="shadow-box" style="width:120px;height:24em" id="persona-list">
	<div class="persona-name">
		<%= persona ? link_to(persona.name, persona) : link_to('New Persona', new_persona_path)  %>
	</div>
	<div class="persona-title">
		<%= persona.title  if persona %>
	</div>
	<div style="margin:auto">
		<div class="shadow-box padded-image">
			<%= image_tag(persona.image_url(:medium).to_s, :height  => 100, :width  => 100)  if persona  %>
		</div>
		<div class="persona-details">
			<div>
				<%= pluralize(persona.categories.count, "Category") if persona%>
			</div>
			<div style="height:5em;overflow:auto">                        
				<%= raw persona.categories.collect{|p| link_to(p.name, p)}.join(" | ") if persona %>
			</div>
			<hr>
			<div>                    
				<% if persona.is_a? Persona %>
					<%= follow_persona_link(persona) if persona %>
				<% elsif persona.is_a? User %>
					<%= follow_user_link(persona) if persona %>
				<% end %>
			</div>      
			<%= admin_area do %>
				<hr>
				<div>                                         
					<% if persona %>
						<%= link_to 'Edit', edit_persona_path(persona) %>| <%= link_to 'Destroy', persona, :confirm => 'Are you sure?', :method => :delete %>
					<% end %>
				</div>           
			<% end %>
		</div>
	</div>
</div>
