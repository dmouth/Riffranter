<% if !@rants.nil? %>
  $("#rant-container.latest").prepend("<%= escape_javascript(@html)%>");

  <% for rant in @rants %>
    $(".rant-partial[data-rant-id='<%=rant.id %>'] .shadow-box").effect("highlight", {}, 3000);
  <% end %>

  <% for rant in @rants %>
    bindRatingControl($('.latest-rants .rating-control[data-rant-id="<%= rant.id %>"]'));
  <% end %>           
<% end %>