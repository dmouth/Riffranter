<%= page_title "Categories" %>
<%= admin_area do %>
  <p>
    <%= link_to 'New Category', new_category_path %> |
    <%= link_to 'Delete Category', @category, :confirm => 'Are you sure?', :method => :delete %>
  </p>
<% end %>


<table border="0" cellspacing="5" cellpadding="5">
  <%= content_tag :tr do %>
    <%= content_tag :td do %>
      <h1>Latest Rants by Category</h1>
    <% end %>
    <%= content_tag :td do %>
    <%= select_tag "category_dropdown", @categories.count > 0 ? options_from_collection_for_select(@categories, :id, :name, @category.id) : [] %>
    <% end %>
  <% end %>

</table>

<h2><%= @category.name if @category %></h2>

<%= paginate(@rants) if @rants && @rants.count > 0 %>
<%= render :partial => "shared/rant_collection", :locals => {:rants => @rants} %>
<%= paginate @rants if @rants %>

<%= admin_area do %>
  <p>
    <%= link_to 'New Category', new_category_path %> |
    <%= link_to 'Delete Category', @category, :confirm => 'Are you sure?', :method => :delete %>
  </p>
<% end %>

<%= content_for :javascripts do %>
  <%= javascript_include_tag "category_index" %>
<% end %>
