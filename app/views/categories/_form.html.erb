<div class="default-form">
  <%= form_for(@category) do |f| %>
    <% if @category.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

        <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

      <div class="field">
        <p><%= f.label :name %></p>
        <p><%= f.text_field :name %></p>
      </div>
      <div class="field">
        <p><%= f.label :personas %></p>
        <% for p in Persona.order(:name) %>
          <p><%= check_box_tag "category[persona_ids][]", p.id, @category.persona_ids.include?(p.id) %> <%= p.name %></p>
        <% end %>
      </div>
      <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
