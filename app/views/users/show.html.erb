<%= page_title "User Profile" %>


<table cellpadding="5" cellspacing="0" class="show-table">
	<tr><th valign="top"><%= User.human_attribute_name :first_name %></th><td valign="top" class="<%= cycle "odd-row", "even-row" %>"><%= @user.first_name %></td></tr>
	<tr><th valign="top"><%= User.human_attribute_name :last_name %></th><td valign="top" class="<%= cycle "odd-row", "even-row" %>"><%= @user.last_name %></td></tr>
	<tr><th valign="top"><%= User.human_attribute_name :email %></th><td valign="top" class="<%= cycle "odd-row", "even-row" %>"><%= @user.email %></td></tr>
	<tr><th valign="top"><%= User.human_attribute_name :created_at %></th><td valign="top" class="<%= cycle "odd-row", "even-row" %>"><%= l @user.created_at %></td></tr>
	<tr><th valign="top"><%= User.human_attribute_name :updated_at %></th><td valign="top" class="<%= cycle "odd-row", "even-row" %>"><%= l @user.updated_at %></td></tr>
	<tr><th valign="top"><%= User.human_attribute_name :admin %></th><td valign="top" class="<%= cycle "odd-row", "even-row" %>"><%= @user.admin %></td></tr>
</table>
<p>
  <%= link_to "Edit Profile", edit_user_url(@user) %> 
  <%= admin_area do %>
    | <%= link_to "Back to Listing", users_path %>
  <% end %>
</p>