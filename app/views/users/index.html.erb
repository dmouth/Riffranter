<table cellpadding="5" cellspacing="0" class="index-table">
	<tr>   
		<th valign="top"><%= User.human_attribute_name :full_name %></th>
		<th valign="top"><%= User.human_attribute_name :email %></th>
		<th valign="top"><%= User.human_attribute_name :created_at %></th>
		<th valign="top"><%= User.human_attribute_name :updated_at %></th>
<th></th>
	</tr>
	<% @users.each do |user| %>
	<tr class="<%= cycle "odd-row", "even-row" %>">
		<td valign="top"><%= link_to user.full_name, user %></td>
		<td valign="top"><%= user.email %></td>
		<td valign="top"><%= l user.created_at %></td>
		<td valign="top"><%= l user.updated_at %></td>
	<td valign="top">
		<%= link_to "Rants", user_rants_url(user) %> |
		<%= link_to "Edit", edit_user_url(user) %>
	</td>
	</tr>
	<% end %>
</table>   

<%= admin_area do %>
  <p><%= link_to "Create New User", new_user_url %></p>
<% end %>