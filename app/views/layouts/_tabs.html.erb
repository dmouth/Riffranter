<%
  urls = [
      ["Home", root_url],
      ["Personas", personas_url],
      ["Rants", rants_url],
      ["Categories", categories_url],
      ["Users", users_url],
    ]
 %>

<ul id="tabs">
  <% for url in urls %>
    <%= content_tag :li, :class => url[1] == request.url ? "selected-tab" : "" do %>
      <%= tab_url(url[0], url[1]) %>
    <% end %>
  <% end %>
</ul>
